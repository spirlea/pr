{% block header %}
    <link href="{{ asset('css/bootstrap.css')}}" rel="stylesheet"/>
    <link href="{{ asset('css/style.css')}}" rel="stylesheet"/>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}



<body>                     

    <div class="registration">
        <h3 class="center h" >Registration</h3>
        <hr>
        <form role="form" method="POST" action="{{asset('check_reg')}}" onsubmit="return myFunction()">
            <div class="form-group">

                <div class="input-group">
                    <input maxlength="15" type="text" name="firstname" class="form-control" id="uFirstname" placeholder="Firstname" required>
                    <label for="uFirstname" class="input-group-addon glyphicon glyphicon-user"></label> 
                </div> </div> 
            <div class="form-group">
                <div class="input-group">
                    <input maxlength="15" type="text" name="lastname" class="form-control" id="uLastname" placeholder="Lastname" required>
                    <label for="uLastname" class="input-group-addon glyphicon glyphicon-user"></label> 
                </div> </div> 
            <div class="form-group">
                <div class="input-group">
                    <input maxlength="20" type="text" name="login" class="form-control" id="uLogin" placeholder="Login" required>
                    <label for="uLogin" class="input-group-addon glyphicon glyphicon-user"></label> 
                </div> </div> 
            <div class="form-group">
                <div class="input-group">

                    <input type="email" maxlength="32" name="email" class="form-control" id="uEmail" placeholder="Email" required>
                    <label for="uEmail" class="input-group-addon glyphicon glyphicon-envelope"></label> 
                </div> </div> 
            <div class="form-group">
                <div class="input-group">
                    <input type="password" name="pass1" maxlength="32" id="pass1" class="form-control" id="uPass1" placeholder="Password" required>
                    <label for="uPass1" class="input-group-addon glyphicon glyphicon glyphicon-lock"></label> 
                </div> </div> 
            <div class="form-group">
                <div class="input-group">
                    <input type="password" maxlength="32" name="pass2" id="pass2" class="form-control" id="uPass2" placeholder="Confirm Password" required>
                    <label for="uPass2" class="input-group-addon glyphicon glyphicon-lock"></label> 
                </div>
            </div> 

            <div class="modal-footer">
                <input type="submit"  class="form-control btn btn-primary btn-block" value="Register">

            </div> 
        </form>   
            
            
           {% for flashMessage in app.session.flashbag.get('RegFlashBag') %}
                                               {{flashMessage}}
                                            {%endfor%} 
    </div>
    <script>
        function myFunction() {
            var pass1 = document.getElementById("pass1").value;
            var pass2 = document.getElementById("pass2").value;
            var ok = true;
            if (pass1 != pass2) {
                //alert("Passwords Do not match");
                document.getElementById("pass1").style.borderColor = "#E34234";
                document.getElementById("pass2").style.borderColor = "#E34234";
                ok = false;
            }

            return ok;
        }
    </script>
</body>